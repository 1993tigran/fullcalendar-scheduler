{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015",
      "scripthost"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "noUnusedLocals": true,
    "noImplicitUseStrict": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "fullcalendar": [ "fullcalendar/src/core/main" ],
      "fullcalendar-basic": [ "fullcalendar/src/basic/main" ],
      "fullcalendar-agenda": [ "fullcalendar/src/agenda/main" ],
      "fullcalendar-timeline": [ "src/timeline/main" ],
      "fullcalendar-resources": [ "src/resources/main" ],
      "fullcalendar-resource-basic": [ "src/resource-basic/main" ],
      "fullcalendar-resource-agenda": [ "src/resource-agenda/main" ],
      "fullcalendar-resource-timeline": [ "src/resource-timeline/main" ]
    },
    "types": [
      "jquery",
      "jasmine",
      "jasmine-jquery"
    ],
    "outDir": "tmp/tsc-output"
  },
  "include": [
    "src/*/main.ts",
    "fullcalendar/tests/automated/globals.d.ts",
    "tests/automated/**/*.js"
  ]
}
